<krpano>
    <!-- Configuration de la vue du panorama -->
    <view hlookat="0" vlookat="0" fovtype="MFOV" fov="120" maxpixelzoom="2" />

    <!-- Chargement de l'image du panorama -->
    <image>
        <cube url="./pano.jpg" />
    </image>

    <!-- Hotspot cliquable -->
    <hotspot name="spot1" url="./cam.png" ath="-50" atv="0" onclick="showMessage()" />
    <hotspot name="spot2" url="./Assets/Elements/croix.png" ath="50" atv="0" onclick="showMessage" />
    <hotspot name="spot3" url="./map.png" ath="50" atv="0" visible="false" width="700" height="700" alpha="1.0" />


    <hotspot name="textHotspot" ath="0" atv="0" distorted="true">
        <text style="hotspotTextStyle" html="true" align="center">
            <![CDATA[
                <p>This is a sample text.</p>
            ]]>
        </text>
    </hotspot>

    <action name="showImage">
        openurl("#popin0", "_self");
        console.log("Hotspot spot2 visibility set to false.");
    </action>
    <action name="closeImage">
    openurl("#popin2", "self");
    if(krpano.get('url') == '#popin2')
        openurl("#popin1", "_blank");
        set(hotspot["spot2"].visible, false);
    </action>

    <action name="showMessage">
    js(showMessageFromXML("Bonjour"));
    </action>
    
</krpano>