<krpano>
    <!-- Configuration de la vue du panorama -->
    <view hlookat="0" vlookat="0" fovtype="MFOV" fov="120" maxpixelzoom="2" />

    <!-- Chargement de l'image du panorama -->
    <image>
        <cube url="./pano.jpg" />
    </image>

    <!-- Hotspot cliquable -->
    <hotspot name="spot1" url="./cam.png" ath="-50" atv="-10" onclick="showImage()" />
    <hotspot name="spot2" url="./cam.png" ath="-50" atv="0" onclick="showImage2()" />
    <hotspot name="spot3" url="./cam.png" ath="-50" atv="10" onclick="showImage3()" />
    <hotspot name="spot4" url="./cam.png" ath="-50" atv="20" onclick="showImage4()" />

    <action name="showImage">
        openurl("#popin1", "_self");
    </action>
    <action name="showImage2">
        openurl("#popin4", "_self");
    </action>
        <action name="showImage3">
        openurl("#popin6", "_self");
    </action>
        <action name="showImage4">
        openurl("#popin8", "_self");
    </action>

    
</krpano>