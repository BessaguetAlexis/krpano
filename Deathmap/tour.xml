<krpano>
    <!-- Configuration de la vue du panorama -->
    <view hlookat="0" vlookat="0" fovtype="MFOV" fov="120" maxpixelzoom="2" />

    <!-- Chargement de l'image du panorama -->
    <image>
        <cube url="panorama.jpg" />
    </image>

    <!-- Calque pour le contenu avec effet de profondeur -->
    <layer name="depthLayer" keep="true" align="center" width="100%" height="100%" depth="-500">
        <!-- Contenu du calque, par exemple une image ou du contenu HTML -->
        <image url="content.png" width="100%" height="100%" />
    </layer>
</krpano>
